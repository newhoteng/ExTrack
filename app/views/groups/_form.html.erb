<%= form_with(model: group, :html => {:class => "registration"}) do |form| %>
  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='first-input'>
    <%= form.text_field :name, placeholder: "Name" %>
  </div>
  
  <div class='picture-field icon-field'>
    <label>
      Upload Icon
      <span style="display:none;">
        <%= form.file_field :icon %>
      </span>
    </label>
  </div>

  <div>
    <%= form.submit "Add", class: 'submit' %>
  </div>
<% end %>
